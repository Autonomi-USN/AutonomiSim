<?xml version="1.0"?>
<launch>
    <node pkg="tf" type="static_transform_publisher" name="movebasic_laser_remap" args="0 0 0 0 0 0 1 usn_drone/lidar_usn_drone_link laser 100" />
    <node pkg="tf" type="static_transform_publisher" name="movebasic_base_remap" args="0 0 0 0 0 0 1 usn_drone/base_link base_link 100" />
    <node pkg="tf" type="static_transform_publisher" name="movebasic_odom_remap" args="0 0 0 0 0 0 1 usn_drone/odom odom 100" />

    <node name="move_basic" pkg="move_basic" type="move_basic" respawn="false" clear_params="true">
        <param name="min_turning_velocity" value="1" />
        <param name="max_turning_velocity" value="1" />
        <param name="max_lateral_velocity" value="0.3" />
        <param name="turning_acceleration" value="0.3" />
        <param name="max_linear_velocity" value="1.5" />
        <param name="linear_acceleration" value="0.1" />
        <param name="angular_tolerance" value="0.02" />
        <param name="linear_tolerance" value="0.1" />
        <param name="localization_latency" value="0.05" />
        <param name="lateral_kp" value="2" />
        <param name="lateral_ki" value="0" />
        <param name="lateral_kd" value="20" />
        <param name="velocity_threshold" value="0.03" />
        <param name="linear_gain" value="1.0" />
        <param name="rotational_gain" value="1.0" />
        <param name="abort_timeout" value="5.0" />
        <param name="obstacle_wait_threshold" value="10.0" />
        <param name="forward_obstacle_threshold" value="1.0" />
        <param name="reverse_without_turning_threshold" value="0.5" />
        <param name="map_frame" value="map" />
        <param name="robot_width" value="0.3" />
        <param name="robot_front_length" value="1" />
        <param name="robot_back_length" value="1" />
        <param name="base_frame" value="usn_drone/base_link" />
        <param name="preferred_planning_frame" value="usn_drone/odom" />
        <param name="preferred_driving_frame" value="usn_drone/odom" />

    </node>

</launch>